<p id="notice"><%= notice %></p>

<h1>Listing Nachrichts</h1>

<table>
  <thead>
    <tr>
      <th>Datum</th>
      <th>Sender</th>
      <th>Empfaenger</th>
      <th>Nachricht</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nachrichts.each do |nachricht| %>
      <tr class="<%= nachricht.read ? :read : :unread %>">
        <td><%= nachricht.created_at < Date.yesterday ? nachricht.created_at : ( time_ago_in_words(nachricht.created_at) + " ago") %></td>
        <td><%= nachricht.sender %></td>
        <td><%= nachricht.empfaenger %></td>
        <td><%= nachricht.nachricht %></td>
        <td><%= link_to 'Show', nachricht %></td>
        <td><%= link_to 'Edit', edit_nachricht_path(nachricht) %></td>
        <td><%= link_to 'Destroy', nachricht, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

