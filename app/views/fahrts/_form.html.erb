<%= form_for(@fahrt) do |f| %>
  <% if @fahrt.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@fahrt.errors.count, "error") %> prohibited this fahrt from being saved:</h2>

      <ul>
      <% @fahrt.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :von %><br>
    <%= f.text_field :von %>
  </div>
  <div class="field">
    <%= f.label :nach %><br>
    <%= f.text_field :nach %>
  </div>
  <div class="field">
    <%= f.label :abfahrt %><br>
    <%= f.date_field :abfahrt %>
  </div>
  <div class="field">
    <%= f.label :dauer %><br>
    <%= f.number_field :dauer %>
  </div>
  <div class="field">
    <%= f.label :preisProMitfahrer %><br>
    <%= f.number_field :preisProMitfahrer %>
  </div>
  <div class="field">
    <%= f.label :maxMitfahrer %><br>
    <%= f.number_field :maxMitfahrer %>
  </div>
  <% if @fahrt.account.nil? %>
  <div class="field">
    <%= f.label :account_id %><br>
    <%= f.text_field :account_id %>
  </div>
  <% else %>
    <%= f.text_field :account_id, hidden: true %>
  <% end %>
  <% unless @fahrt.id.nil? %>
  <div class="field">
    <%= f.label :istGespeichert %><br>
    <%= f.check_box :istGespeichert%>
  </div>
  <% else %>
    <%= f.check_box :istGespeichert, hidden: true %>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
