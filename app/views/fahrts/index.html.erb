<p id="notice"><%= notice %></p>

<h1>Fahrtensuche</h1>

<%= form_tag fahrts_path, method: :get do %>
  <%= text_field_tag :von, params[:von], placeholder: 'Von...' %>
  <%= text_field_tag :nach, params[:nach], placeholder: 'Nach...' %>
  <%= submit_tag 'Suchen' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Von</th>
      <th>Nach</th>
      <th>Dauer</th>
      <th>Preispromitfahrer</th>
      <th>Maxmitfahrer</th>
      <th>Account</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @fahrts.each do |fahrt| %>
      <tr>
        <td><%= fahrt.von %></td>
        <td><%= fahrt.nach %></td>
        <td><%= fahrt.dauer %></td>
        <td><%= fahrt.preisProMitfahrer %></td>
        <td><%= fahrt.maxMitfahrer %></td>
        <td><%= fahrt.account %></td>
        <td><%= link_to 'Show', fahrt %></td>
        <% if current_account.id == fahrt.account.id %>
          <td><%= link_to 'Edit', edit_fahrt_path(fahrt) %></td>
          <td><%= link_to 'Destroy', fahrt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td><%= link_to 'Mitfahren', new_mitfahrer_path(fahrt: fahrt) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fahrt', new_fahrt_path %>
