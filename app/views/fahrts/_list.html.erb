<table>
  <thead>
    <tr>
      <th><%= t('fahrts.from') %></th>
      <th><%= t('fahrts.to') %></th>
      <th><%= t('fahrts.departure') %></th>
      <% if @options[:details] %>
        <th><%= t('fahrts.duration') %></th>
        <th><%= t('fahrts.price') %></th>
        <th><%= t('fahrts.seats') %></th>
      <% end %>
      <% if @options[:account] %>
        <th><%= t('fahrts.account') %></th>
      <% end %>
      <% if @options[:marked] %>
      <th><%= t('fahrts.marked') %></th>
      <% end %>
      <th><%= t('fahrts.actions') %></th>
    </tr>
  </thead>

  <tbody>
    <% @fahrts.each do |fahrt| %>
      <tr>
        <td><%= fahrt.von %></td>
        <td><%= fahrt.nach %></td>
        <td><%= fahrt.abfahrt %></td>
        <% if @options[:details] %>
          <td><%= (fahrt.dauer / 60.0) %> h</td>
          <td><%= "%.2f" % (fahrt.preisProMitfahrer / 100.0) %> â‚¬</td>
          <td style="text-align:center;"><%= fahrt.maxMitfahrer %></td>
        <% end %>
        <% if @options[:account] %>
        <td><%= link_to fahrt.account, fahrt.account %></td>
        <% end %>
        <% if @options[:marked] %>
          <td>
            <% if fahrt.istGespeichert %>
              :y:
              <%= link_to sanitize('&times;'), fahrt_speichern_path(fahrt), method: :delete, remote: true %>
            <% else %>
              :n:
              <%= button_to 'Speichern', fahrt_speichern_path(fahrt), method: :post, remote: true %>
            <% end %>
          </td>
        <% end %>
        <% if @options[:new_from_marked] %>
          <td><%= button_to "Erneut Fahren", new_fahrt_path(fahrt: fahrt), method: :get %></td>
        <% else %>
          <td>
            <%= button_to 'Show', fahrt , method: :get %>
            <% if current_account.id == fahrt.account.id %>
              <%= button_to 'Edit', edit_fahrt_path(fahrt) %>
              <%= button_to 'Destroy', fahrt, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% else %>
              <%= button_to 'Mitfahren', new_mitfahrer_path(fahrt: fahrt) , method: :get%>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
