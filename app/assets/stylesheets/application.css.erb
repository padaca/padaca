    content: " â€¢";
    color: blue;
}


.wrapper .footer ul{
  list-style-type: none;
  margin: 0;
  padding: 0;
  overflow: hidden;
 }

 .wrapper .footer li {
     float: left;
}

.wrapper .footer li a {
  display: block;
  color: black;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
}

.wrapper .footer li a:hover {
  color: white;
}

 .wrapper .header .login{
  justify-self: end;
  background-color: white;
 }

 wrapper .header .login ul {  
   align-self: right;
 }
 
.wrapper .content {
  border-radius: 25px;
  background-color: white;
  justify-self: center;
  opacity: 0.85;
  align-self: center;
  text-align: center;
  color: black;
  padding: 10px;
 }

 .wrapper .content  a {
  color: black;
  text-align: center;
}

.wrapper .footer{ 
  display:grid;
  background-color: white;
}

.wrapper .footer .footerlist{
  justify-self: center;
}

  .table-scrollable {
    width: 100%;
    overflow-y: auto;
    margin: 0 0 1em;
  }
  
  .table-scrollable::-webkit-scrollbar {
    -webkit-appearance: none;
    width: 14px;
    height: 14px;
  }
  
  .table-scrollable::-webkit-scrollbar-thumb {
    border-radius: 8px;
    border: 3px solid #fff;
    background-color: rgba(0, 0, 0, .3);
  }

  @media (max-width: 400px) {
    .wrapper .header{
      grid-template-columns:1fr;
  }
  .wrapper .header .login{
    justify-self: start;
  }
}
