 html, body {
            
            margin: 0px;
        }

 .wrapper {
  display:grid;
  height: 100vh;
  grid-template-columns:1fr;
  grid-template-rows:1fr 14fr 1fr;
  background: url('<%= asset_url('v.jpg') %>');
  background-repeat: no-repeat;
  background-size: contain;
  background-position:center;
  background-attachedment:fixed;
  background-size:cover;
  background-color:white;
  border: 1px solid rewhited;
 }

 .wrapper .header{
  background-color: white;
  display:grid;
  grid-template-columns:7fr 3fr;
  justify-content: center;
 }

 .wrapper .header .lists{
     background-color: white;
 }

 .wrapper .header ul{
  list-style-type: none;
  margin: 0;
  padding: 0;
  overflow: hidden;
 }

 .wrapper .header li {
  float: left;
}

.wrapper .header li a {
  display: block;
  color: black;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
}

.wrapper .header li a:hover {
  color: white;
}

/* Menu unread indicator */
