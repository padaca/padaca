  font-size: 14px;
}
.wrapper .content table tfoot .links {
  text-align: right;
}
.wrapper .content table tfoot .links a{
  display: inline-block;
  background: #1C6EA4;
  color: #FFFFFF;
  padding: 2px 8px;
  border-radius: 5px;
}

.wrapper .content table input[type="submit"] {
  background: #33cc33;
  color: white;
