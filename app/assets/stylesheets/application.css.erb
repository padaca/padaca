 html, body {
            
            margin: 0px;
        }

 .wrapper {
  display:grid;
  height: 100vh;
  grid-template-columns:1fr;
  grid-template-rows:1fr 14fr 1fr;
  background: url('<%= asset_url('v.jpg') %>');
  background-repeat: no-repeat;
  background-size: contain;
  background-position:center;
  background-attachedment:fixed;
  background-size:cover;
  background-color:white;
  border: 1px solid rewhited;
 }

 

 .wrapper .header{
  background-color: white;
  display:grid;
  grid-template-columns:6fr 4fr;
  justify-content: center;
 }

 .wrapper .content h1 {
  padding-top: 5px ;
  padding-bottom: 20px ;
}

 .wrapper .header .lists{
     background-color: white;
 }

 .wrapper .header ul{
  list-style-type: none;
  margin: 0;
  padding: 0;
  overflow: hidden;
 }


 .wrapper .header li {
  float: left;
}

.wrapper .header li a {
  display: block;
  color: black;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
}

.wrapper .header li a:hover {
  color: white;
}


.wrapper .header .buttonlist ul{
  display: inline;
  list-style-type: none;
 }
 .wrapper .header .buttonlist li{
  display: inline;
 }

/* Menu unread indicator */
li.unread a::after {
    content: " â€¢";
    color: blue;
}


.wrapper .footer ul{
  list-style-type: none;
  margin: 0;
  padding: 0;
  overflow: hidden;
 }

 .wrapper .footer li {
     float: left;
}

.wrapper .footer li a {
  display: block;
  color: black;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
}

.wrapper .footer li a:hover {
  color: white;
}

 .wrapper .header .login{
  justify-self: end;
  background-color: white;
 }

 wrapper .header .login ul {  
   align-self: right;
 }
 
.wrapper .content {
  width: 85% ;
  height: 85% ;
  border-radius: 25px;
  background-color: white;
  justify-self: center;
  opacity: 0.85;
  align-self: center;
  text-align: center;
  color: black;
  padding: 10px;
 }

 .wrapper .content a {
  color: black;
  text-align: center;
}

.wrapper .content a:hover {
  color: blue;
  background:white;
}

.wrapper .footer{ 
  display:grid;
  background-color: white;
}

.wrapper .footer .footerlist{
  justify-self: center;
}

  .table-scrollable {
    width: 100%;
    overflow-y: auto;
    margin: 0 0 1em;
  }
  
  .table-scrollable::-webkit-scrollbar {
    -webkit-appearance: none;
    width: 14px;
    height: 14px;
  }
  
  .table-scrollable::-webkit-scrollbar-thumb {
    border-radius: 8px;
    border: 3px solid #fff;
    background-color: rgba(0, 0, 0, .3);
  }

 
